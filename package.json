{
  "name": "shopping-backend",
  "version": "1.0.0",
  "description": "Node.js backend for mobile shopping application with payment gateway and admin CRUD operations",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "server": "nodemon --watch src --exec node src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "shopping",
    "ecommerce",
    "payment",
    "admin",
    "mobile",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0-rc.3",
    "nodemailer": "^6.9.7",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "stripe": "^14.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json,env",
    "ignore": [
      "src/**/*.test.js",
      "src/**/*.spec.js",
      "node_modules/**/node_modules"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "delay": "1000",
    "verbose": true
  }
}
